  "bugs": {
    "url": "https://github.com/mwaszkiewicz/typescript-rest-api/issues"
  },
  "homepage": "https://github.com/mwaszkiewicz/typescript-rest-api#readme",
  "devDependencies": {
    "@types/config": "^0.0.41",
    "@types/express": "~4.17.13",
    "@types/express-pino-logger": "^4.0.3",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.32",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "config": "^3.3.7",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
